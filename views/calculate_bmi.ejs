<!-- calculate_bmi.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculate BMI</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400&family=Roboto:wght@300&display=swap" rel="stylesheet">

</head>

<body>
    <h1>Calculate BMI</h1>
    <form action="/bmi/calculate" method="POST">
        <label>Height (in meters):</label>
        <input type="number" step="0.01" name="height" required><br><br>
        <label>Weight (in kilograms):</label>
        <input type="number" step="0.01" name="weight" required><br><br>
        <button type="submit">Calculate BMI</button>
    </form>
    <% if (bmi) { %>
        <h2>Calculated BMI:</h2>
        <p>BMI: <%= bmi.bmi %></p>
        <p>Category: <%= bmi.category %></p>
    <% } %>
    <a href="/bmi/history/all"><button>View BMI History</button></a>

</body>

</html>